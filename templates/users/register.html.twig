{% extends 'base.html.twig' %}

{% block meniu %}{% endblock %}

{% block content %}
<div class="container">
    <form method="get" action="/login" class="w-50 mt-5 mx-auto">
        <div class="form-group">
            <label for="user-email">El. paštas</label>
            <input type="email" class="form-control" id="user-email" placeholder="elpastas@pastas.lt" />
        </div>
        <div class="form-group">
            <label for="password">Slatažodis</label>
            <input type="password" class="form-control" id="password" />
        </div>
        <div class="form-group">
            <label for="password-repeat">Pakartoti slatažodis</label>
            <input type="password" class="form-control" id="password-repeat" />
        </div>
        <div class="form-group">
            <label for="user-type">Vartotojo tipas</label>
            <select class="form-control" id="user-type">
                <option selected>Klientas</option>
                <option>Darbuotojas</option>
                <option>Administratorius</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Registruotis</button>
    </form>
</div>
{% endblock %}