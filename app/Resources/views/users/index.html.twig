{% extends 'base.html.twig' %}

{% block content %}
    {% if is_granted('ROLE_ADMINISTRATORIUS') %}
        <div class="col-lg-3 panel-group">
            {% include 'users/side_menu.html.twig' %}
        </div>
    {% endif %}
<div class="col-lg-6">
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Vardas:</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th scope="row">pavardė:</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th scope="row">El. paštas:</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th scope="row">Tipas:</th>
                <td>{{ role }}</td>
            </tr>
            <tr>
                <th scope="row">Užsiregistruota:</th>
                <td>{{ user.registration|date("Y-m-d") }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
