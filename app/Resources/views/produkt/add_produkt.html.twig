{% extends 'base.html.twig' %}

{% block content %}
<div class="cl">&nbsp;</div>
    <!-- Content -->
    <div>
        <div class="row">
            <div class="col-75">
                <div class="container">
                    <h2>Produkto Duomenys</h2>
                </div>
                <div class="container">
                    <form action="/produkt/add_produkt{% if item is not null %}?edit=1&id={{ item.id }}{% endif %}" method="Post">

                                <div class="form-group row">
                                    <div class="col-sm-2">
                                <label for="name"><i class="fa fa-user"></i> Pavadinimas</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control"  id="name" name="name" placeholder="Pavadinimas" value="{% if item is not null %}{{ item.pavadinimas }}{% endif %}" required oninvalid="this.setCustomValidity('Įveskite pavadinimą!')" oninput="this.setCustomValidity('')">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-2">
                                <label for="medzid"><i class="fa fa-user"></i> Medžiagų grupė</label>
                            </div>
                            <div class="col-sm-3">
                                <select id="medzGrSelect" class="form-control"  name="medzGrSelect" class="custom-select">
                                    {% for med in medzGrs %}
                                        <option {% if item is not null %}
                                                    {% if item.fkMedziaguGrupeid.id == med.id %}
                                                        selected
                                                    {% endif %}
                                                {% endif %} value="{{ med.id }}">{{ med.pavadinimas }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                        <input type="submit" value="Išsaugti" class="btn">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->
    <div class="cl">&nbsp;</div>
{% endblock %}
