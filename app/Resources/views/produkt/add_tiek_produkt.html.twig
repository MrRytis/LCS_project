{% extends 'base.html.twig' %}

{% block content %}
<div class="cl">&nbsp;</div>
    <!-- Content -->
    <div>
        <div class="row">
            <div class="col-75">
                <div class="container">
                    <h2>Tiekėjo Produkto Duomenys</h2>
                </div>
                <div class="container">
                    <form action="/produkt/add_tiek_produkt{% if tiekItem is not null %}?id={{ tiekItem.id }}{% endif %}{% if item is not null %}&edit=1&idP={{ item.id }}{% endif %}" method="Post">

                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label for="produkt"><i class="fa fa-user"></i> Produktas</label>
                            </div>
                            <div class="col-sm-3">
                                <select id="produkt" name="produkt"  class="form-control custom-select">
                                    {% for produktas in produkts %}
                                        <option {% if item is not null %}{% if produktas.id == item.fkProduktasid.id %}selected{% endif %}{% endif %} value="{{ produktas.id }}">{{ produktas.pavadinimas }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input type="submit" value="Išsaugti" class="btn">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->
    <div class="cl">&nbsp;</div>
{% endblock %}
